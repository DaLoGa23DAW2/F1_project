<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundfinal"
    tools:context=".PantallaF">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout">


        <!-- Botón Jugar -->
        <Button
            android:id="@+id/botonReintentar"
            android:layout_width="350dp"
            android:layout_height="52dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_ripple"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="@font/fuentef2"
            android:text="REINTENTAR"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <!-- Botón Salir -->
        <Button
            android:id="@+id/botonSalir"
            android:layout_width="350dp"
            android:layout_height="52dp"
            android:background="@drawable/button_ripple"
            android:backgroundTint="@android:color/transparent"
            android:fontFamily="@font/fuentef2"
            android:text="SALIR"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="229dp"
        android:layout_marginBottom="331dp"
        android:layout_weight="1"
        android:background="#99000000"
        android:divider="@android:color/darker_gray"
        android:padding="16dp"
        android:showDividers="middle"
        android:stretchColumns="1"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <!-- Encabezado de la tabla -->
        <TableRow android:background="#80000000"> <!-- Fondo oscuro semi-transparente para las cabeceras -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Nombre"
                android:textColor="#FFFFFF" /> <!-- Texto blanco -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Puntuación"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tiempo"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Fecha"
                android:textColor="#FFFFFF" />
        </TableRow>

    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
